/* components/search/search.wxss */
@import '../../iconfont.wxss';
.search-container{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 750rpx;
  height: 94rpx;
  background-color: white;
}
.icon-fabu{
  width: 58rpx;
  height: 48rpx;
  font-size: 48rpx;
  margin-left: 22rpx;
  font-weight: 600;

  /* transform: translateX(16rpx); */
}
.search-input{
  position: relative;
  flex: 1;
  height: 68rpx;
  background-color: #f5f5f5;
  border-radius: 50px;
  font-size: 28rpx;
  margin-left: 22rpx;
  color: gray;
  padding-left: 60rpx;
  line-height: 68rpx;
}
.search-input input{
  height: 68rpx;
  /* background-color: red; */
}
.icon-sousuo{
  position: absolute;
  left: 20rpx;
  line-height: 80rpx;
}
.search-button{
  width: 120rpx;
  height: 58rpx;
  font-size: 24rpx;
  line-height: 58rpx;
  background-color: #d43c33;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
