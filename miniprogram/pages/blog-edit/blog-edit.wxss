.input{
  width: 720rpx;
  height: 300rpx;
  margin: 10rpx auto;

}
.input textarea{
  /* background-color: red; */
  padding: 20rpx 20rpx 0 20rpx;
  font-size: 30rpx;
}
.image{
  width: 688rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx auto;
  /* background-color: red; */
}
.image-detail{
  width: 220rpx;
  /* height: 220rpx; */
  margin-right: 14rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  color: rgba(128, 128, 128, 0.3);
  border: 1px dotted gray;
  text-align: center;
  font-size:120rpx;
  line-height: 220rpx;
  font-weight: 100;
  position: relative;
}
.imgs{
  width: 100%;
  height: 100%;
}
.image-detail:nth-child(3n){
  margin-right: 0;
}

.icon-shanchu1{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  font-size: 38rpx;
  line-height: 70rpx;
  top: 0;
  right: 0;
  text-align: center;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}
.words-num {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send-btn {
  width: 120rpx;
  height: 58rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 58rpx;
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}
