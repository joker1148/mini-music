/* miniprogram/pages/blog/blog.wxss */

.music-main{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
}
.music-index{
  width: 100rpx;
  height: 120rpx;
  font-size: 34rpx;
  line-height:120rpx;
  padding-left: 36rpx;
  color: gray;
  box-sizing: border-box;
  font-weight: 400;
  /* background-color: yellow; */
}
.music-detail{
  flex: 1;
  width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  /* background-color: red; */
}
.music-name{
  height: 70rpx;
  font-size: 34rpx;
  padding-left: 20rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}
.text{
  font-size: 32rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
}
.music-singer{
  height: 28rpx;
  color: rgba(41, 27, 27, 0.527);
  font-size: 28rpx;
  padding-left: 20rpx;
  line-height: 28rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
}

.playing{
  color: #d43c33;
}