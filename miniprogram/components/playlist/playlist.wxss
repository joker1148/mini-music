.playlist-container{
  width: 220rpx;
  position: relative;
  margin: 3px;
}
.playlist-img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
  position: relative;
}
.playlist-name{
  font-size: 26rpx;
  line-height: 1.2;
  /* padding: 2px 0 0 4px; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.playlist-text{
  color: white;
  font-size: 24rpx;
  position: absolute;
  top: 4rpx;
  right: 10rpx;
  padding-left: 26rpx;
  background:url('data:image/svg+xml;base64,') no-repeat 0px center/22rpx 20rpx;
}